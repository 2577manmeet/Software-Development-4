function start() {
	if (facingEast()) {
		makeLeftSquare();
	}
	if (facingNorth()) {
		makeRightSquare();
	}
}

function makeLeftSquare() {
	for (var i = 0; i<4; i++) {
		move();
		turnLeft();
		putBall();
	}
}

function makeRightSquare() {
	for (var i = 0; i<4; i++) {
		move();
		turnRight();
		putBall();
	}
}
